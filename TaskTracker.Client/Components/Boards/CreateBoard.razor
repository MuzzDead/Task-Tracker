@using AntDesign
<Modal Title="Create New Board"
       Visible=@IsVisible
       OnOk=@HandleCreateBoard
       OnCancel=@HandleCancel
       Centered="true"
       Width="500">
    <BodyTemplate>
        <Form Model=@model
              Layout=@FormLayout.Vertical
              ValidateOnChange="true">
            <FormItem Label="Board Title"
                      Name=@nameof(model.Title)
                      Required="true"
                      Rules=@titleRules>
                <Input @bind-Value=@model.Title
                       Placeholder="Enter board title"
                       MaxLength="100"
                       ShowCount="true"
                       Size=@InputSize.Large />
            </FormItem>
            <FormItem Label="Description"
                      Name=@nameof(model.Description)>
                <TextArea @bind-Value=@model.Description
                          Placeholder="Enter board description (optional)"
                          Rows="4"
                          MaxLength="500"
                          ShowCount="true"
                          Size=@InputSize.Large />
            </FormItem>
        </Form>
    </BodyTemplate>
