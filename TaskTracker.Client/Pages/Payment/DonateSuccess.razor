@page "/donate/success"
@using AntDesign
@inject NavigationManager Navigation

<PageTitle>Thank you for your support!</PageTitle>

<div class="result-container">
    <Row Justify=@RowJustify.Center Style="min-height: 80vh;" Align=@RowAlign.Middle>
        <Col Xs="24" Sm="20" Md="16" Lg="12" Xl="10">
        <Card Class="result-card">
            <Result Status=@ResultStatus.Success
                    Title="Payment completed successfully!"
                    SubTitle="Thank you for supporting the project! Your donation means a lot to us. ❤️">
                <Extra>
                    <Space Size=SpaceSize.Middle>
                        <Button Type=@ButtonType.Primary
                                Size=@ButtonSize.Large
                                OnClick="GoHome"
                                Icon=@IconType.Outline.Home>
                            Go to Home
                        </Button>
                        <Button Type=@ButtonType.Default
                                Size=@ButtonSize.Large
                                OnClick="DonatAgain"
                                Icon=@IconType.Outline.Heart>
                            Donate again
                        </Button>
                    </Space>
                </Extra>
            </Result>
        </Card>
        </Col>
    </Row>
</div>

<style>
    .result-container {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 20px;
    }

    .result-card {
        border-radius: 16px !important;
        box-shadow: 0 20px 40px rgba(0,0,0,0.1) !important;
        border: none !important;
    }
</style>

@code {
    private void GoHome()
    {
        Navigation.NavigateTo("/");
    }

    private void DonatAgain()
    {
        Navigation.NavigateTo("/donate");
    }
}