@page "/"
@using AntDesign
@inject NavigationManager Navigation

<div class="home-container">
    <div class="hero-section">
        <div class="hero-content">
            <Icon Type="project" class="hero-icon" />
            <Title Level="1" class="hero-title">TaskTracker</Title>
            <Title Level="3" class="hero-subtitle">
                Organize your projects like never before
            </Title>
            <Paragraph class="hero-description">
                A modern, intuitive task management platform that helps teams
                collaborate efficiently. Create boards, manage tasks, and track
                progress with ease.
            </Paragraph>

            <div class="hero-features">
                <div class="feature-item">
                    <Icon Type="team" />
                    <Text>Team Collaboration</Text>
                </div>
                <div class="feature-item">
                    <Icon Type="dashboard" />
                    <Text>Visual Boards</Text>
                </div>
                <div class="feature-item">
                    <Icon Type="rocket" />
                    <Text>Real-time Updates</Text>
                </div>
            </div>

            <div class="hero-actions">
                <Button Type="@ButtonType.Primary"
                        Size="@ButtonSize.Large"
                        class="cta-button"
                        OnClick=@(() => Navigation.NavigateTo("/register"))>
                    Get Started
                </Button>

                <Button Type="@ButtonType.Default"
                        Size="@ButtonSize.Large"
                        class="demo-button">
                    View Demo
                </Button>
            </div>
        </div>
    </div>
</div>


    <div class="stats-section">
        <div class="stat-item">
            <Title Level="2" class="stat-number">1</Title>
            <Text class="stat-label">Active Users</Text>
        </div>
        <div class="stat-item">
            <Title Level="2" class="stat-number">0</Title>
            <Text class="stat-label">Projects</Text>
        </div>
        <div class="stat-item">
            <Title Level="2" class="stat-number">0</Title>
            <Text class="stat-label">Tasks Completed</Text>
        </div>
    </div>


<style>
    .home-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 0 2rem;
    }

    .hero-section {
        max-width: 800px;
        text-align: center;
        margin-bottom: 4rem;
    }

    .hero-content {
        background: rgba(255, 255, 255, 0.95);
        padding: 3rem;
        border-radius: 16px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(10px);
    }

    .hero-icon {
        font-size: 4rem;
        color: #667eea;
        margin-bottom: 1rem;
    }

    .hero-title {
        color: #1f2937;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .hero-subtitle {
        color: #6b7280;
        font-weight: 400;
        margin-bottom: 1.5rem;
    }

    .hero-description {
        color: #4b5563;
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 2rem;
    }

    .hero-features {
        display: flex;
        justify-content: center;
        gap: 2rem;
        margin-bottom: 2.5rem;
        flex-wrap: wrap;
    }

    .feature-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        color: #6b7280;
    }

        .feature-item .anticon {
            font-size: 1.5rem;
            color: #667eea;
        }

    .hero-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .cta-button {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 8px;
        font-weight: 600;
        padding: 0 2rem;
        height: 48px;
        transition: all 0.3s ease;
    }

        .cta-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
        }

    .demo-button {
        border: 2px solid #667eea;
        color: #667eea;
        border-radius: 8px;
        font-weight: 600;
        padding: 0 2rem;
        height: 48px;
        transition: all 0.3s ease;
    }

        .demo-button:hover {
            background: #667eea;
            color: white;
            transform: translateY(-2px);
        }

    .stats-section {
        display: flex;
        gap: 3rem;
        background: rgba(255, 255, 255, 0.9);
        padding: 2rem 3rem;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .stat-item {
        text-align: center;
    }

    .stat-number {
        color: #667eea;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .stat-label {
        color: #6b7280;
        font-size: 0.9rem;
    }

    @@media (max-width: 768px) {
        .hero-content {
            padding: 2rem;
        }

        .hero-features {
            gap: 1rem;
        }

        .stats-section {
            flex-direction: column;
            gap: 1rem;
        }
    }
</style>