@page "/boards"
@using System
@using System.Linq
@using TaskTracker.Client.Components.Boards
@using AntDesign

<div class="boards-container">
    <BoardsHeader Title="My Boards"
                  ShowSearch="true"
                  SearchTerm=@searchTerm
                  OnSearchClick=@OnSearchClick
                  OnCreateClick=@CreateBoard
                  ButtonText="Add Board"
                  IsSearching=@isSearching />

    <BoardList CurrentPageBoards=@currentPageBoards
               IsLoading=@(isLoading || isSearching)
               CurrentPage=@currentPage
               PageSize=@pageSize
               TotalBoards=@totalBoards
               OnBoardClick=@OpenBoard
               OnPageChange=@OnPageChange />
</div>

<CreateBoard IsVisible=@isCreateBoardModalVisible
             IsVisibleChanged=@OnCreateBoardModalVisibilityChanged
             OnBoardCreated=@HandleBoardCreated />