@page "/changepassword"
@using AntDesign
@using Microsoft.AspNetCore.Components.Web

<Flex Justify="FlexJustify.Center"
      Align="FlexAlign.Center"
      Style="min-height:100vh; padding:16px;">

    <Card Hoverable="true"
          Style="width:100%; max-width:500px;">

        <Title Level="2">Change Password</Title>

        <Space Direction="SpaceDirection.Vertical"
               Size="SpaceSize.Middle"
               Style="width:100%; padding:0 16px;">
            <SpaceItem>

                <InputPassword @bind-Value="currentPassword"
                               Placeholder="Current Password"
                               Size="InputSize.Large"
                               ShowPassword="false"
                               OnPressEnter="@(e => Submit(e, currentPassword))" />
            </SpaceItem>
            <SpaceItem>
                <InputPassword @bind-Value="newPassword"
                               Placeholder="New Password"
                               Size="InputSize.Large"
                               ShowPassword="false"
                               OnPressEnter="@(e => Submit(e, newPassword))" />
            </SpaceItem>
        </Space>

        <Divider />

        <div class="password-section">
            <Button Block="true"
                    Type="ButtonType.Primary"
                    Size="ButtonSize.Large"
                    OnClick="ChangePassword">
                Change Password
            </Button>

            <Button Block="true"
                    Type="ButtonType.Default"
                    Size="ButtonSize.Large"
                    OnClick="Cancel">
                Cancel
            </Button>
        </div>

    </Card>
</Flex>

@code {
    private string currentPassword { get; set; }
    private string newPassword { get; set; }

    private void Submit(KeyboardEventArgs args, string pwd)
    {
        Console.WriteLine($"Enter pressed on '{pwd}'");
    }

    private void ChangePassword()
    {
        // change‐password logic
    }

    private void Cancel()
    {
        // clear/close logic
    }
}

