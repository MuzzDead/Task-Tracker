@using AntDesign
@inherits LayoutComponentBase

<div class="main-layout">
    <NavBar />
    <div class="content-area">
        <div class="page-content">
            @Body
        </div>
    </div>
</div>

<style>
    .main-layout {
        display: flex;
        min-height: 100vh;
        background: #f8fafc;
    }

    .content-area {
        flex: 1;
        margin-left: 280px;
        display: flex;
        flex-direction: column;
        transition: margin-left 0.3s ease;
    }

    .page-content {
        flex: 1;
        overflow: auto;
    }

    @@media (max-width: 768px) {
        .main-layout {
            flex-direction: column;
        }
        
        .content-area {
            margin-left: 0;
            margin-top: 0;
        }
    }
    
    /* Global styles for AntDesign components */
    :global(.ant-layout) {
        background: transparent;
    }
    
    :global(.ant-btn-primary) {
        background: #667eea;
        border-color: #667eea;
    }
    
    :global(.ant-btn-primary:hover) {
        background: #5a67d8;
        border-color: #5a67d8;
    }
</style>